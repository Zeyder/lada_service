@import "./variables.styl"
@import "../../vendor/fontawesome/index.styl"
@import "~stylus-normalize/normalize.styl"
@import "../../vendor/bootstrapGrid/bootstrap.styl"

clearfix()
    &:before
    &:after
        content " ";
        display table
    &:after
        clear both

.{$fa-css-prefix}
    &-search
        fa-icon(search)
    &-automobile
        fa-icon(automobile)
    &-tags
        fa-icon(tags)
    &-user
        fa-icon(user)
    &-cogs
        fa-icon(cogs)
    &-warning
        fa-icon(warning)
    &-check-square
        fa-icon(check-square)
    &-calendar
        fa-icon(calendar-plus-o)
    &-calendar-check-o
        fa-icon(calendar-check-o)
    &-edit
        fa-icon(pencil)
    &-sign-out
        fa-icon(sign-out)
    &-plus
        fa-icon(plus)
    &-trash
        fa-icon(trash)
*
&:before
&:after
    box-sizing border-box
html
    font-size 14px
    &.no-scroll
    &.no-scroll>body
        overflow hidden
    @media(max-width: 992px)
        font-size 12px
body
    font-family 'Roboto', Arial, sans-serif
    font-weight 400
    padding-top $top-bar-height
    padding-bottom 15px
    background-color $body-bg

h1
h2
h3
h4
h5
h6
b
strong
    font-weight 700


.text
    &_danger
        color $brand-danger

.container
    width 100%
    max-width 1100px
    margin auto
    padding 0 15px
    &_xs
        max-width 350px
    &_md
        max-width 620px

.modal
    width 100%
    height auto
    background-color #fff
    box-shadow 0 1px 10px rgba(0,0,0, .1)
    &__header
        background-color $brand-primary
        border-bottom 1px solid rgba(0,0,0, .1)
        color #fff
    &__header
    &__body
        padding 10px 15px

.label
    font-weight bold
    color rgba($body-color, .6)
    margin-bottom 5px
    display block
    .radio
    .checkbox
    &__text
        display inline-block
        vertical-align middle

.checkbox
.radio
    margin-right 10px
    outline none

.input
    width 100%
    padding-left 8px
    height 30px
    line-height (@height - 2px)
    border 1px solid #B9BAA3
    color $body-color
    outline none
    transition border 350ms ease
    -webkit-appearance none
    &:focus
        border-color rgba($brand-primary, .6)
    &_valid
        border-color green !important
    &_invalid
        border-color red !important

.form
    margin 0
    padding 0
    &__header
        margin -30px -30px 25px -30px
        background-color $brand-primary
        padding 15px
        text-align center
        border-bottom 1px solid rgba(0,0,0, .1)
        border-top-left-radius 3px
        border-top-right-radius 3px
    &__title
        color #fff
        margin 0
    &_login
        padding 30px
        background-color #fff
        box-shadow 0 0 10px rgba(0,0,0, .1)
        border-radius 3px
    &__group
        width 100%
        margin-bottom 15px

hr.divinder
    margin 0 -15px 15px -15px
    background none
    border 0
    border-bottom 1px solid rgba(0,0,0, .1)

.padding
    &_none
        padding 0
        &_left
            padding-left 0 !important
        &_right 
            padding-right 0 !important
.margin
    &_none
        margin 0 !important
    &_left
        margin-left 0 !important
    &_right
        margin-right 0 !important

.table
    width 100%
    height auto
    thead td
        background-color gray
        color $body-color
    tbody tr:hover td
    tfoot tr:hover td
        background-color rgba($brand-primary, .1)
        cursor pointer
    td
        background-color #fff
        color rgba($body-color, .8)
        font-size 12px
        padding 15px
        border 1px solid rgba(silver, .3)
.btn
    width auto
    padding 0 15px
    height 33px
    line-height @height
    font-size 14px
    font-weight 300
    border 1px solid transparent
    border-radius 2px
    display inline-block
    outline none
    .fa
        margin-right 7px
        transform translateY(1px)
    &_default
        background-color #B9BAA3
        color #fff
        &:hover
            background-color darken(@background-color, 15%)
        &.btn_transparent
            border 1px solid @background-color
            color @background-color
            background-color transparent
            &:hover
                background-color darken(@color, 10%)
                color #fff
                border-color transparent
    &_white
        background-color #fff
        color $brand-primary
    &_block
        width 100%
        display block
        border-radius 0
    &_primary
        background-color $brand-primary
        color #fff
    &_danger
        background-color $brand-danger
        color #fff
        &:hover
            background-color darken(@background-color, 15%)